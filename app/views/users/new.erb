<% if flash[:notice] %>
  <div id='notice'><%= flash[:notice] %></div>
<% end %>

<h1>New user? Please sign up</h1>
<form action='/users' method='POST'>
  <label for='name'>
    Name: <input name='name' type='text' value='<%= @user.name %>'>
  </label>
  <label for='nickname'>
    Nickname: <input name='nickname' type='text' value='<%= @user.nickname %>'>
  </label>
  <label for='email'>
    Email: <input name='email' type='text' value='<%= @user.email %>'>
  </label>
  <label for='password'>
    Password: <input name='password' type='password'>
  </label>
  <label for='password_confirmation'>
    Password: <input name='password_confirmation' type='password'>
  </label>
  <input type='submit' value='Sign up'>
</form>
